{
  "version": "1.0.0",
  "logging": {
    "level": "INFO",
    "file": "logs/system.log",
    "enable_debug": false
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "timeout": 30,
    "log_level": "INFO",
    "cors_origins": ["*"]
  },
  "features": {
    "enable_minio": true,
    "enable_database": true,
    "enable_kafka": true
  },
  "connectors": {
    "llm": {
      "model": "GigaChat-Max",
      "scope": "GIGACHAT_API_B2B",
      "verify_ssl": false,
      "timeout": 30.0,
      "connection_timeout": 10.0,
      "max_connections": 100,
      "retry_count": 3,
      "retry_delay": 1.0
    },
    "db": {
      "host": "localhost",
      "port": 5432,
      "database": "gigachat_db",
      "user": "postgres",
      "password": "password",
      "min_pool_size": 1,
      "max_pool_size": 20,
      "timeout": 30.0,
      "connection_timeout": 10.0,
      "retry_count": 3,
      "retry_delay": 1.0
    },
    "queue": {
      "bootstrap_servers": ["localhost:9092"],
      "default_format": "json",
      "consumer_poll_timeout": 1.0,
      "auto_offset_reset": "earliest",
      "timeout": 30.0,
      "connection_timeout": 10.0,
      "retry_count": 3,
      "retry_delay": 1.0
    },
    "storage": {
      "endpoint": "localhost:9000",
      "access_key": "minioadmin",
      "secret_key": "minioadmin",
      "bucket": "gigachat-files",
      "use_ssl": false,
      "timeout": 30.0,
      "connection_timeout": 10.0,
      "retry_count": 3,
      "retry_delay": 1.0
    }
  }
}

